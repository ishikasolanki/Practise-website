extends ../views/base.pug

block script
    script(src='../static/script.js')
block style 
    style 
        include ../static/style.css    
        include ../static/constyle.css
block content 
    h1 Contact Us     
    form(action="/contact",method="post")
        input(type="text",class="myinput" name="name" placeholder="Enter Your Name")
        input(type="number",class="myinput" age="age" placeholder="Enter Your age")
        input(type="text",class="myinput" name="address" placeholder="Enter Your address")
        input(type="email",class="myinput" name="email" placeholder="Enter Your valid email")
        div.rad 
            input(type="radio",class="r" name="gender" value="Male")
            label(for="male") Male
            input(type="radio",class="r" name="gender" value="Female")
            label(for="Female") Female
        button.btn 
            | Submit